<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pizza2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pizza2.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin .>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&family=Rubik&display=swap" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-special" asp-area="" asp-controller="Home" asp-action="Index">Pizza2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1 options nav-fill">
                        <li class="nav-item text-center">
                            <a class="nav-link border-1 border-end" asp-area="" asp-controller="Home" asp-action="AvalibleMenu">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link border-1 border-end" asp-area="" asp-controller="Orders" asp-action="Index">Pending Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link border-1 border-end" asp-area="" asp-controller="Orders" asp-action="AcceptedOrders">Accepted Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger " asp-area="" asp-controller="Home" asp-action="Logout">Log Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container my-3 image-body">
        <main role="main" class="pb-3 text-center">
            @if (TempData["message"] != null)
            {
                <div class="container my-3 text-center">
                    <div class="row">
                        <div class="col">
                            <span class="text-success border border-success bg-light">
                                @TempData["message"]
                            </span>
                        </div>
                    </div>
                </div>
            }

            @if (TempData["error"] != null)
            {
                <div class="container my-3 text-center">
                    <div class="row">
                        <div class="col">
                            <span class="text-danger border border-danger bg-black">
                                @TempData["message"]
                            </span>
                        </div>
                    </div>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Pizza2App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
