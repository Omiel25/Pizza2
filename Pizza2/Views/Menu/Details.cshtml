@model List<MenuDetailsModel>

<h2 class="my-4">Details of the list of menus:</h2>

<div class="container">
    <div class="row text-center">
        <table class="table table-striped table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Menu Name</th>
                <th scope="col" class="text-start">Pizzas</th>
                <th scope="col">Active Menu</th>
            </tr>
            @{int count = 0;}
            @foreach(var menu in Model){
                <tr>
                    <td>@count</td>
                    <td>@menu.MenuName</td>
                    <td class="text-start">
                        <ol>
                            @for (int i = 0; i < menu.PizzaNames.Count(); i++)
                            {
                                <li>@menu.PizzaNames[i]</li>
                            }
                        </ol>
                    </td>
                    <td>
                        @if(menu.IsActive == true){
                            <b class="text-success">Activated</b>
                        }
                        else if (menu.IsActive == false)
                        {
                            <span class="text-danger">Not active</span>
                        }
                    </td>
                </tr>
                count++;
            }

           
        </table>
    </div>
</div>