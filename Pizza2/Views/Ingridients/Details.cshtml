@model List<IngridientViewModel>
@{
    int count = 0;
}

<h2 class="my-4">Avalible Ingridients</h2>
<div class="container">
    <table class="table table-striped table-light">
        <tr>
            <th scope="col"> <h4>ID</h4> </th>
            <th scope="col"> <h4>Name</h4> </th>
            <th scope="col"> <h4>Price</h4> </th>
            <th scope="col"> <h4>Display priority</h4> </th>
            <th scope="col"> <h4>Image Display Priority</h4> </th>
            <th scope="col"> <h4>Contains Meat</h4> </th>
            
        </tr>

        @foreach(var item in Model){
            <tr>
                <th scope="row">@count</th>
                <td class="text-start">@item.IngridientName</td>
                <td>@item.IngridientPrice <b>PLN</b></td>
                <td>@item.DisplayPriority</td>
                <td>@item.ImagePriority</td>
                <td>
                @if(item.ContainsMeat == true){
                    <b class="text-danger">Yes</b>
                } else {
                    <b class="text-success">No</b>
                }
                </td>

            </tr>
            count++;
        }

    </table>
</div>

