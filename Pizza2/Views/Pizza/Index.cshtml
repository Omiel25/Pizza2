@{
    <div class="container panel">
        <div class="row">
            <div class="card col-7 col-lg-5 mb-3">
                <div class="card-header">
                    <h5>Pizza Creation</h5>
                </div>

                <div class="card-body bg-light picture-container">
                    <img src="~/images/Pizzas/PizzaDodaj.jpg" class="img-fluid" alt="Responsive image">
                </div>

                <div class="card-footer">
                    <a class="nav-link text-dark col btn btn-primary m-3 py-2 text-white"
                   asp-area="" asp-controller="Pizza" asp-action="Create">Create Pizza</a>
                </div>
            </div>

            <div class="card col-7 col-lg-5 mb-3">
                <div class="card-header">
                    <h5>Pizzas Details</h5>
                </div>

                <div class="card-body">
                    <img src="~/images/Pizzas/PizzaDetale.png" class="img-fluid" alt="Responsive image">
                </div>

                <div class="card-footer">
                    <a class="nav-link text-dark col btn btn-primary m-3 py-2 text-white"
                   asp-area="" asp-controller="Pizza" asp-action="Details">Pizza Details</a>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="card col-7 col-lg-5 mb-3">
                <div class="card-header">
                    <h5>Pizza Editor</h5>
                </div>

                <div class="card-body bg-light picture-container">
                    <img src="~/images/Pizzas/PizzaDodaj.jpg" class="img-fluid" alt="...">
                </div>

                <div class="card-footer">
                    <a class="nav-link text-dark col btn btn-primary m-3 py-2 text-white"
                       asp-area="" asp-controller="Pizza" asp-action="Edit">Edit Pizza</a>
                </div>
            </div>

            <div class="card col-7 col-lg-5 mb-3">
                <div class="card-header">
                    <h5>Delete Pizza</h5>
                </div>

                <div class="card-body">
                    <img src="~/images/Pizzas/PizzaUsun.png" class="img-fluid" alt="Responsive image">
                </div>

                <div class="card-footer">
                    <a class="nav-link text-dark col btn btn-primary m-3 py-2 text-white"
                   asp-area="" asp-controller="Pizza" asp-action="Delete">Delete Pizza</a>
                </div>
            </div>

        </div>
    </div>
}
