@model List<ItemListHolderModel<PizzaViewModel, string>>

<h2 class="my-4">Pizzas Details</h2>
<div class="container">
    <table class="table table-striped table-dark">
        <tr>
            <th scope="col-1"> <h4>#</h4> </th>
            <th scope="col"> <h4>Name</h4> </th>
            <th scope="col-1"> <h4>Ingridients List</h4> </th>
            <th scope="col"> <h4>Ingridients</h4> </th>
            <th scope="col-2"> <h4>Price</h4> </th>
        </tr>
    @{
        int pizzaCount = 0;
        foreach(var item in Model){
            <tr class="text-start">
                @{
                    int ingridientCount = 0;
                }
                <td>@pizzaCount</td>
                <td>@item.ItemA.PizzaName</td>
                <td>@item.ItemB</td>
                <td >
                @foreach(var ingridient in item.ItemsB)
                {
                    if(ingridientCount == 0){
                        <span>@ingridient</span>
                    } else 
                    {
                        <span>, @ingridient</span>
                    }
                    ingridientCount++;
                }
                </td>
                    <td>
                    @if(item.ItemA.PizzaPrice == null)
                    {
                        <span><b>AUTO: </b> @item.customData <b> PLN</b></span>
                    } 
                    else
                    {
                        @item.ItemA.PizzaPrice <b> PLN</b>
                    }
                    </td>

                @{
                pizzaCount++;
                }
            </tr>
        }
    }
        
    </table>
</div>

