@model EditViewModel<IngridientViewModel>

<h2>Edit Ingridients</h2>

<div class="container my-2 text-center">
    <div class="row border border-dark">
        <div class="col p-0">
            <table class="table table-dark table-striped m-0">
                <tr>
                    <th scope="col"> <h4>Name</h4> </th>
                    <th scope="col"> <h4>Price</h4> </th>
                    <th scope="col"> <h4>Is Vege</h4> </th>
                    <th scope="col"> <h4>Display Priority</h4> </th>
                    <th scope="col"> <h4>Image Priority</h4> </th>
                    <th scope="col"> <h4>Confrim Change</h4> </th>
                </tr>

                <!-- For each record create a from-->
                @foreach (var item in Model.itemList)
                {
                    <form asp-controller="Ingridients" asp-action="EditIngridient" method="post">

                    <tr>
                        <td> <input asp-for=itemModel.IngridientName type="text" value="@item.IngridientName"> </td>
                        <td> <input asp-for=itemModel.IngridientPrice type="number" value="@item.IngridientPrice"> </td>
                        <td>
                                @{
                                    if (item.ContainsMeat == true)
                                    {
                                    <input asp-for=itemModel.ContainsMeat type="checkbox" checked>
                                    }
                                    else
                                    {
                                    <input asp-for=itemModel.ContainsMeat type="checkbox">
                                    }
                                }
                        </td>
                        <td> <input asp-for=itemModel.DisplayPriority type="number" value="@item.DisplayPriority"> </td>
                        <td> <input asp-for=itemModel.ImagePriority type="number" value="@item.ImagePriority"> </td>
                        <td>
                            <input asp-for=itemModel.Id type="number" value="@item.Id" hidden>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </td>
                    </tr>

                    </form>
                }



            </table>
        </div>
    </div>
</div>
